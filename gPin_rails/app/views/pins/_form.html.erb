<% if @pin.errors.any? %>
  <% @pin.errors.full_messages.each do |error| %>
    <!-- if we are using Bootstrap, this class will color the text red -->
    <p class="text-danger">
      <%= error%>
    </p>
  <% end %>
<% end %>

<%= form_for @pin do |f| %>
  <%= f.label "Url" %>
  <%= f.text_field :url %><br />
  <%= f.label "Image" %>
  <%= f.text_field :image %><br />
  <%= f.label "Comment" %>
  <%= f.text_field :comment %><br />
  <%= f.submit %>
<% end %>